<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.ActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">?android:attr/colorBackground</item>
    </style>

    <style name="TextApperance.Tollbar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextApperance.Tollbar.Subtitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse">
        <item name="android:textAlignment">center</item>
    </style>

</resources>